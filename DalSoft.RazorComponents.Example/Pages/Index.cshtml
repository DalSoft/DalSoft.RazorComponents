        <component type="typeof(DalSoft.RazorClassLibrary.Example.ComponentLibraryTest)" render-mode="Static" />

        <!-- With DalSoft.RazorComponents -->
        <component-library-test />

        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
